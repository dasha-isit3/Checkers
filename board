 std::cout << "   1 2 3 4 5 6 7 8" << std::endl;
    std::cout << "  ________________" << std::endl;
    for (int i = 1; i <= 8; i++)
   { 
        if (i % 2 != 0 ){
         std::cout << i << "⎹  " ;
      }
      else{
           std::cout << i << "⎹";
      }
      for (int j = 1; j <= 4; j++){
         std::cout << "⬛️  ";
         if ( j == 4 & i % 2 == 0){
             std::cout << "⎸";
         }
      }
 
      std::cout << std::endl;
   }
   std::cout << "  ⎺⎺⎺⎺⎺⎺⎺⎺⎺⎺⎺⎺⎺⎺⎺⎺";
